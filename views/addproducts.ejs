<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Course - Admin</title>

  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #f0fff4;
      display: flex;
      height: 100vh;
    }

    /* Sidebar */
    .sidebar {
      width: 240px;
      background: #145a32;
      color: white;
      padding-top: 20px;
      display: flex;
      flex-direction: column;
    }

    .sidebar h2 {
      text-align: center;
      margin-bottom: 20px;
      font-size: 22px;
      font-weight: bold;
    }

    .sidebar a {
      padding: 15px 20px;
      text-decoration: none;
      color: white;
      font-size: 16px;
      display: block;
      transition: 0.3s;
    }

    .sidebar a:hover {
      background: #1e8449;
    }

    .main {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
    }

    .topbar {
      background: white;
      padding: 15px 20px;
      border-radius: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    /* Center Card */
    .center-wrapper {
      display: flex;
      justify-content: center;
      margin-top: 35px;
    }

    .form-card {
      width: 600px;
      background: white;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.15);
    }

    .form-card h3 {
      text-align: center;
      color: #145a32;
      margin-bottom: 20px;
      font-size: 24px;
      font-weight: bold;
    }

    .form-group {
      margin-bottom: 15px;
    }

    label {
      font-weight: 600;
      color: #145a32;
      display: block;
      margin-bottom: 5px;
    }

    input, textarea, select {
      width: 100%;
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #b2d8b2;
      outline: none;
    }

    .btn-submit {
      background: #27ae60;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 16px;
      transition: .3s;
      width: 100%;
      margin-top: 10px;
      font-weight: bold;
    }

    .btn-submit:hover {
      background: #1e8449;
    }

  </style>
</head>

<body>

  <div class="sidebar">
    <h2>Admin Panel</h2>
    <a href="vusers">Users</a>
    <a href="venq">Enquiry</a>
    <a href="addcourses" style="background:#1e8449;">Add Courses</a>
    <a href="vcourses"> Courses</a>
    <a href="settings">Settings</a>
    <a href="logout">Logout</a>
  </div>

  <div class="main">
    <div class="topbar">
      <h2>Add New Course</h2>
      <div><strong>Date:</strong> <span id="date"></span></div>
    </div>

    <!-- Centered Card -->
    <div class="center-wrapper">
      <div class="form-card">

        <h3>Course Information</h3>

        <form action="addcourseprocess" method="POST" enctype="multipart/form-data">

          <div class="form-group">
            <label>Course ID</label>
            <input type="text" name="course_id" placeholder="C-001" required />
          </div>

          <div class="form-group">
            <label>Course Name</label>
            <input type="text" name="course_name" placeholder="Enter course name" required />
          </div>

          <div class="form-group">
            <label>Category</label>
            <select name="category" required>
              <option value="">Select category</option>
              <option>Learning</option>
              <option>Art & Craft</option>
              <option>Music & Dance</option>
              <option>Science Basics</option>
              <option>Language</option>
              <option>Sports & Activity</option>
            </select>
          </div>

          <div class="form-group">
            <label>Age Group</label>
            <input type="text" name="age_group" placeholder="3 - 6 Years" required />
          </div>

          <div class="form-group">
            <label>Total Seats</label>
            <input type="number" name="total_seats" placeholder="40" required />
          </div>

          <div class="form-group">
            <label>Class Time</label>
            <input type="text" name="class_time" placeholder="08:00 - 10:00" required />
          </div>

          <div class="form-group">
            <label>Tution Fee (â‚¹)</label>
            <input type="number" name="tuition_fee" placeholder="290" required />
          </div>

          <div class="form-group">
            <label>Description</label>
            <textarea name="description" rows="4" placeholder="Enter detailed course description..." required></textarea>
          </div>

          <div class="form-group">
            <label>Course Image</label>
            <input type="file" name="course_image" />
          </div>

          <button type="submit" class="btn-submit">ðŸ’¾ Save Course</button>

        </form>

      </div>
    </div>

  </div>

  <script>
    document.getElementById("date").innerText = new Date().toLocaleDateString();
  </script>

</body>
</html>
