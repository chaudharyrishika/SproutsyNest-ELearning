<!DOCTYPE html>
<html>
<head>
     <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Courses</title>
     <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #f0fff4;
      display: flex;
      height: 100vh;
    }

    /* Sidebar */
    .sidebar {
  background-color: #0b4f2d; /* your green */
  height: 100vh;           
  position: fixed;         
  top: 0;
  left: 0;
  width: 220px;            
  color: white;
  padding-top: 20px;
  display: flex;
  flex-direction: column;
  a:hover {
      background: #1e8449;
    }
}


    .sidebar h2 {
      text-align: center;
      margin-bottom: 20px;
      font-size: 22px;
      font-weight: bold;
    }

    .sidebar a {
      padding: 15px 20px;
      text-decoration: none;
      color: white;
      font-size: 16px;
      display: block;
      transition: 0.3s;
    }

   .sidebar {
    background-color: #0b4f2d; /* your green */
    height: 100vh;            /* full window height */
    position: fixed;          /* stick left */
    top: 0;
    left: 0;
    width: 220px;             /* or whatever width */
}

    /* Main Content */
    .main {
       margin-left: 220px; /* ensures main content is not underneath the sidebar */
      flex: 1;
      padding: 20px;
    }

.course-img {
    width: 120px;      /* adjust as needed */
    height: 120px;     /* optional: keep square */
    object-fit: cover; /* crops nicely */
    border-radius: 6px;
}
.course-container {
  margin-top: 10px !important;
  padding-top: 15px !important;
}


    .topbar {
      background: white;
      padding: 15px 20px;
      border-radius: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    .cards {
      margin-top: 20px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }

    .card {
      
      padding: 20px;
      
    }

    .card h3 {
      color: #145a32;
      margin-bottom: 10px;
    }

    .table-section {
      margin-top: 30px;
      background: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    table th, table td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    table th {
      background: #d1f2d6;
      color: #145a32;
    }
  </style>
</head>

<body>
<div class="sidebar">
    <h2>Admin Panel</h2>
    <a href="vusers">Users</a>
    <a href="venq">Enquiry</a>
    <a href="addcourses">Add Courses</a>
    <a href="vcourses"> Courses</a>
    <a href="settings">Settings</a>
    <a href="logout">Logout</a>
  </div>
 <div class="main">
    <div class="topbar">
      <h2>Welcome Admin</h2>
      <div><strong>Date:</strong> <span id="date"></span></div>
    </div>
    
<div class="cards">
  <div class="course-container">
      <div class="card">
        <h3>All Courses</h3>
<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Category</th>
        <th>Age Group</th>
        <th>Seats</th>
        <th>Time</th>
        <th>Fee</th>
        <th>Description</th>
        <th>Image</th>
        <th>Action</th>
    </tr>

    <% data.forEach(course => { %>
        <tr>
            <td><%= course.course_id %></td>
            <td><%= course.course_name %></td>
            <td><%= course.category %></td>
            <td><%= course.age_group %></td>
            <td><%= course.total_seats %></td>
            <td><%= course.class_time %></td>
            <td>â‚¹<%= course.tuition_fee %></td>
            <td><%= course.description %></td>
            <td>
                <% if (course.course_image) { %>
                    <img src="/uploads/<%= course.course_image %>" class="course-img">
                <% } else { %>
                    No image
                <% } %>
            </td>
            <td><a href="/delcourse?id=<%=course.course_id %>">Delete</a></td>
        </tr>
    <% }) %>

</table>
 </div> 
 </div>
    </div>
</div>

  <script>
    document.getElementById("date").innerText = new Date().toLocaleDateString();
  </script>
</body>
</html>
